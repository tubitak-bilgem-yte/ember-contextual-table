{{#if (if (has-block) (if defaultHeader false true) false)}}
  {{yield (hash onsortinfoupdate=(action "onsortinfoupdate") footer=(readonly footer) header=(readonly header))}}
{{else}}
  <div onclick={{action "onclick"}} role="button">
    {{name}}
    {{#if upArrowVisible}}
      <span>▲</span>
    {{else if downArrowVisible}}
      <span>▼</span>
    {{else}}
      <span>●</span>
    {{/if}}
  </div>
{{/if}}
