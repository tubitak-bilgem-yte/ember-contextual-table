<!-- //BEGIN-SNIPPET custom-header-footer-table -->
{{#data-table data=data selectionMode='multi' selectionChanged=(action 'selectionChanged')
        classNames=tableClassNames customHeader=(component 'custom-header')
        showFooter=true customFooter=(component 'custom-footer' avgAge=avgAge) as |t|}}
    {{t.selectionColumn}}
    {{t.column propertyName='name'}}
    {{t.column propertyName='surname'}}
    {{#t.column as |col|}}
      {{sub currentYear col.row.birthYear}}
    {{/t.column}}
    {{#t.column as |col|}}
      <img src="{{rootURL}}/assets/images/{{col.row.team}}.png" alt="Team {{col.row.team}}" style="width:32px;height:32px;">
    {{/t.column}}
{{/data-table}}
<!-- // END-SNIPPET -->